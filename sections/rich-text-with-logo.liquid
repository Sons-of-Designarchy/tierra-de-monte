{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Scoped to this section only */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #shopify-section-{{ section.id }} .rt {
    display: grid;
    gap: 16px;
    justify-items: var(--rt-align, start);
    text-align: var(--rt-text-align, left);
    max-width: var(--rt-maxw, 780px);
    margin-inline: auto;
  }
  #shopify-section-{{ section.id }} .rt.rt--align-center { --rt-align:center; --rt-text-align:center; }
  #shopify-section-{{ section.id }} .rt.rt--align-left   { --rt-align:start;  --rt-text-align:left;  }
  #shopify-section-{{ section.id }} .rt.rt--narrow       { --rt-maxw: 680px; }
  #shopify-section-{{ section.id }} .rt.rt--default      { --rt-maxw: 780px; }
  #shopify-section-{{ section.id }} .rt.rt--wide         { --rt-maxw: 980px; }

  /* Logo (no Dawn .media wrapper) */


  #shopify-section-{{ section.id }} .rt__heading { margin: 0; }
  #shopify-section-{{ section.id }} .rt__text { color: rgb(var(--color-foreground), .85); }

  /* Monospace toggles (strong specificity so RTE children inherit) */
  #shopify-section-{{ section.id }} .rt--mono-heading .rt__heading,
  #shopify-section-{{ section.id }} .rt--mono-heading .rt__heading * {
    font-family: var(--font-monospace-family, 'IBMPlexMono-Light', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Courier New", monospace) !important;
    font-weight: 400;
    letter-spacing: .01em;
  }
  #shopify-section-{{ section.id }} .rt--mono-body .rt__text,
  #shopify-section-{{ section.id }} .rt--mono-body .rt__text * {
    font-family: var(--font-monospace-family, 'IBMPlexMono-Light', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Courier New", monospace) !important;
    font-weight: 300;
    letter-spacing: .01em;
  }

  #shopify-section-{{ section.id }} .rt__cta { margin-top: 4px; }
{%- endstyle -%}

{%- style -%}
  /* widen the "wide" layout to 990px */
  #shopify-section-{{ section.id }} .rt.rt--wide { --rt-maxw: 990px; }

  /* heading line-height */
  #shopify-section-{{ section.id }} .rt__heading {
    line-height: 108%;
  }
{%- endstyle -%}

{%- style -%}
  /* === Rich text with logo â€” consistent logo sizing across browsers === */
  #shopify-section-{{ section.id }}{
    /* Pull the editor value into a CSS custom prop (fallback 160px) */
    --rt-logo-w: {{ section.settings.logo_width | default: 160 }}px;
  }

  /* Force the IMG to that width everywhere */
  #shopify-section-{{ section.id }} .rt__logo-img{
    display: block;              /* no inline gaps */
    width: clamp(100px, var(--rt-logo-w), 100%);  /* exact editor width, but never overflow container */
    height: auto;                /* keep aspect ratio */
    max-width: 100%;             /* safety on very narrow screens */
    object-fit: contain;         /* SVG/raster both safe */
    line-height: 0;              /* avoid stray descender space on some browsers */
  }
{%- endstyle -%}

{%- style -%}
  /* CASA SODA TABLET */
  @media only screen and (min-width: 750px) and (max-width: 989px) {
    .hxl {
      font-size: calc(var(--font-heading-scale) * 4.2rem);
    }
    /* Fallback first: flex for very old browsers */
    .section--multicolumn-custom .multicolumn-list {
      display: flex;
      flex-wrap: wrap;
      gap: 24px; /* tweak if you want tighter spacing */
    }
    .section--multicolumn-custom .multicolumn-list__item {
      /* 3 in a row with gap accounted for */
      flex: 1 1 calc((100% - 2 * 24px) / 3);
      max-width: calc((100% - 2 * 24px) / 3);
      width: auto;
    }

    /* Modern path: prefer CSS Grid when available */
    @supports (display: grid) {
      .section--multicolumn-custom .multicolumn-list {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 24px;
      }
      .section--multicolumn-custom .multicolumn-list__item {
        flex: none; /* neutralize flex fallback */
        max-width: none;
      }
    }

    /* Neutralize mobile-slider behavior on tablet */
    .section--multicolumn-custom slider-component {
      overflow: visible; /* avoid clipping */
    }
    .section--multicolumn-custom slider-component ul {
      scroll-snap-type: none; /* stop snap scrolling on tablet */
    }

    /* If Dawn utilities still force 1-col, override them here */
    .section--multicolumn-custom .grid--1-col-tablet-down {
      grid-template-columns: repeat(3, minmax(0, 1fr)) !important;
    }
  }
  /* Example: small mobile tweaks */
  @media only screen and (max-width: 749px) {
    .hxl {
      font-size: calc(var(--font-heading-scale) * 3rem);
    }
  }
  /* Mobile: make the logo ~80% bigger */
  @media only screen and (max-width: 749px) {
    .rt__logo {
      display: flex;
      justify-content: center;
      overflow: visible; /* avoid clipping when scaling */
    }
    .rt__logo-img {
      display: inline-block;
      height: auto;
      max-width: none !important; /* override any Dawn max-width caps */
      transform: scale(1.8); /* ~80% larger */
      transform-origin: center center;
    }
  }
{%- endstyle -%}

{%- liquid
  assign align_class = section.settings.text_alignment | prepend: 'rt--align-'
  assign width_class = 'rt--' | append: section.settings.content_width
  assign mono_heading = section.settings.mono_heading | default: false
  assign mono_body = section.settings.mono_body | default: false

  assign rt_logo_alt = section.settings.logo_alt | default: section.settings.heading | default: 'Section logo'
  assign rt_logo_alt = rt_logo_alt | escape
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="rt {{ align_class }} {{ width_class }}{% if mono_heading %} rt--mono-heading{% endif %}{% if mono_body %} rt--mono-body{% endif %}">
      {%- if section.settings.logo != blank -%}
        <div class="rt__logo">
          {{-
            section.settings.logo
            | image_url: width: 1100
            | image_tag: alt: rt_logo_alt, loading: 'lazy', class: 'rt__logo-img'
          -}}
        </div>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="rt__heading title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="rt__text rte">
          {{ section.settings.text }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <div class="rt__cta">
          <a
            class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
            {% if section.settings.button_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.button_link }}"
            {% endif %}
          >
            {{ section.settings.button_label | escape }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rich text + Logo (custom)",
  "tag": "section",
  "class": "section",
  "disabled_on": { "groups": ["header", "footer"] },
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo (top)" },
    { "type": "text", "id": "logo_alt", "label": "Logo alt text", "default": "Section logo" },
    {
      "type": "range",
      "id": "logo_width",
      "min": 24,
      "max": 320,
      "step": 4,
      "unit": "px",
      "label": "Logo width",
      "default": 120
    },

    { "type": "inline_richtext", "id": "heading", "label": "Heading", "default": "Your headline" },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "H3" },
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "H0" },
        { "value": "hxl", "label": "HXL" }
      ],
      "default": "h2"
    },

    { "type": "richtext", "id": "text", "label": "Text", "default": "<p>Add some compelling copy here.</p>" },

    { "type": "text", "id": "button_label", "label": "Button label" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    {
      "type": "checkbox",
      "id": "button_style_secondary",
      "label": "Use outline button (theme secondary)",
      "default": false
    },

    {
      "type": "select",
      "id": "text_alignment",
      "label": "Content alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content width",
      "options": [
        { "value": "narrow", "label": "Narrow" },
        { "value": "default", "label": "Default" },
        { "value": "wide", "label": "Wide" }
      ],
      "default": "default"
    },

    { "type": "checkbox", "id": "mono_heading", "label": "Use monospaced font for heading", "default": false },
    { "type": "checkbox", "id": "mono_body", "label": "Use monospaced font for text", "default": true },

    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "background-1" },

    { "type": "header", "content": "Padding" },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [{ "name": "Rich text + Logo (custom)" }]
}
{% endschema %}
