  @media (min-width: 990px){
    /* 0) expose per-section height from settings */
    #shopify-section-{{ section.id }}{
      --mcf-height: {{ section.settings.height_desktop_value | default: 60 }}{{ section.settings.height_desktop_unit | default: 'vh' }};
