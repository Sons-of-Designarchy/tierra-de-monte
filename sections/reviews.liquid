{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Section inherits page bg; card uses scheme */
  #shopify-section-{{ section.id }} { background: none; }

  #shopify-section-{{ section.id }} .reviews__card {
    background: rgb(var(--color-background));
    border-radius: {{ section.settings.radius }}px;
    padding: clamp(20px, 4vw, 36px);
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .reviews__title {
    text-align: center;
    margin: 0 0 20px;
  }

  /* ===== Centered carousel with side peeks ===== */
  #shopify-section-{{ section.id }} .reviews__viewport {
    --gap: {{ section.settings.gap }}px;
    /* Amount of side peek visible on each side */
    --peek: clamp(24px, 12vw, 220px);
    position: relative;
  }

  #shopify-section-{{ section.id }} .reviews__track {
    display: flex;
    gap: var(--gap);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-padding-inline: calc(var(--peek) + var(--gap));
    padding-inline: calc(var(--peek) + var(--gap));
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }
  #shopify-section-{{ section.id }} .reviews__track::-webkit-scrollbar { display: none; }

  /* Each slide takes full width minus the left+right peeks */
  #shopify-section-{{ section.id }} .review {
    flex: 0 0 calc(100% - (var(--peek) * 2));
    scroll-snap-align: center;
    scroll-snap-stop: always;
    transition: transform .25s ease, opacity .25s ease;
    opacity: .35;
    transform: scale(.98);
    cursor: pointer;
  }
  /* Active (centered) slide highlight */
  #shopify-section-{{ section.id }} .review.is-active {
    opacity: 1;
    transform: scale(1);
    cursor: default;
  }

  /* Inner layout */
  #shopify-section-{{ section.id }} .review__inner {
    height: 100%;
    display: flex; flex-direction: column;
    align-items: center; text-align: center;
    gap: 16px;
    padding-inline: 8px;
  }
  #shopify-section-{{ section.id }} .review__avatar {
    width: {{ section.settings.avatar_size }}px;
    height: {{ section.settings.avatar_size }}px;
    border-radius: 50%;
    object-fit: cover;
  }
  #shopify-section-{{ section.id }} .review__quote {
    font-family: var(--font-heading-family);
    line-height: 1.25;
    font-size: clamp(18px, 2.1vw, 30px);
  }
  #shopify-section-{{ section.id }} .review__author {
    font-weight: 600; letter-spacing: .05em; text-transform: uppercase;
    font-size: 14px; opacity: .9;
  }
  #shopify-section-{{ section.id }} .review__company {
    letter-spacing: .08em; text-transform: uppercase;
    font-size: 12px; opacity: .75;
  }

  /* Optional vertical divider illusion for peeks on very wide screens (off by default) */
  @media (min-width: 1200px) {
    {% if section.settings.show_dividers %}
    #shopify-section-{{ section.id }} .review:not(.is-active) { border-left: 2px solid {{ section.settings.divider_color }}; }
    {% endif %}
  }

  /* Nav buttons (desktop only; mobile can swipe) */
  #shopify-section-{{ section.id }} .reviews__nav {
    display: none;
  }
  @media (min-width: 990px) {
    #shopify-section-{{ section.id }} .reviews__nav {
      position: absolute; inset: 0; pointer-events: none;
      display: grid; grid-template-columns: 1fr 1fr;
    }
    #shopify-section-{{ section.id }} .reviews__btn {
      pointer-events: auto;
      display: flex; align-items: center; justify-content: center;
      background: transparent; border: 0; padding: 0; margin: 0;
    }
    #shopify-section-{{ section.id }} .reviews__btn svg { width: 28px; height: 28px; opacity: .6; }
    #shopify-section-{{ section.id }} .reviews__btn:hover svg { opacity: 1; }
    #shopify-section-{{ section.id }} .reviews__btn--prev { justify-content: flex-start; padding-left: 10px; }
    #shopify-section-{{ section.id }} .reviews__btn--next { justify-content: flex-end;   padding-right: 10px; }
  }
{%- endstyle -%}

<section class="reviews">
  <div class="page-width section-{{ section.id }}-padding isolate">

    <div class="reviews__card content-container color-{{ section.settings.color_scheme }} gradient">
      {% if section.settings.title != blank %}
        <h2 class="reviews__title title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
      {% endif %}

      <div class="reviews__viewport" id="rvp-{{ section.id }}">
        <ul class="reviews__track" id="track-{{ section.id }}" role="list" aria-live="polite">
          {%- for block in section.blocks -%}
            <li class="review" {{ block.shopify_attributes }} data-index="{{ forloop.index0 }}">
              <div class="review__inner">
                {% if block.settings.image != blank %}
                  {{ block.settings.image
                    | image_url: width: 320
                    | image_tag: widths: '160, 200, 240, 320',
                      class: 'review__avatar',
                      alt: block.settings.name | escape
                  }}
                {% endif %}
                {% if block.settings.quote != blank %}
                  <div class="review__quote">“{{ block.settings.quote | escape }}”</div>
                {% endif %}
                {% if block.settings.name != blank %}
                  <div class="review__author">{{ block.settings.name | escape }}</div>
                {% endif %}
                {% if block.settings.company != blank %}
                  <div class="review__company">{{ block.settings.company | escape }}</div>
                {% endif %}
              </div>
            </li>
          {%- endfor -%}
        </ul>

        <!-- Desktop nav buttons (optional UX, click on slides also works) -->
        <div class="reviews__nav">
          <button class="reviews__btn reviews__btn--prev" type="button" aria-label="Anterior">
            <svg viewBox="0 0 20 20" fill="currentColor"><path d="M12.7 15.3a1 1 0 0 1-1.4 0l-5-5a1 1 0 0 1 0-1.4l5-5a1 1 0 1 1 1.4 1.4L8.42 9H17a1 1 0 1 1 0 2H8.41l4.3 4.3a1 1 0 0 1 0 1.4z"/></svg>
          </button>
          <button class="reviews__btn reviews__btn--next" type="button" aria-label="Siguiente">
            <svg viewBox="0 0 20 20" fill="currentColor"><path d="M7.3 4.7a1 1 0 0 1 1.4 0l5 5a1 1 0 0 1 0 1.4l-5 5a1 1 0 1 1-1.4-1.4L11.58 11H3a1 1 0 1 1 0-2h8.59L7.3 6.1a1 1 0 0 1 0-1.4z"/></svg>
          </button>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
(() => {
  const root   = document.getElementById('rvp-{{ section.id }}');
  const track  = document.getElementById('track-{{ section.id }}');
  if (!root || !track) return;

  const slides = Array.from(track.querySelectorAll('.review'));
  if (!slides.length) return;

  // Center the nth slide
  const center = (i) => {
    const el = slides[i];
    if (!el) return;
    el.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
  };

  // Mark the slide closest to the viewport center as active
  const setActive = () => {
    const vw = track.getBoundingClientRect();
    const centerX = vw.left + vw.width / 2;
    let bestIdx = 0, bestDist = Infinity;
    slides.forEach((s, i) => {
      const r = s.getBoundingClientRect();
      const mid = r.left + r.width / 2;
      const d = Math.abs(mid - centerX);
      if (d < bestDist) { bestDist = d; bestIdx = i; }
    });
    slides.forEach((s, i) => s.classList.toggle('is-active', i === bestIdx));
    return bestIdx;
  };

  // Init
  let active = setActive();

  // Recompute on scroll/resize
  const onScroll = () => { active = setActive(); };
  track.addEventListener('scroll', onScroll, { passive: true });
  window.addEventListener('resize', onScroll);

  // Click a slide to center it
  slides.forEach((s, i) => s.addEventListener('click', () => center(i)));

  // Buttons
  const prevBtn = root.querySelector('.reviews__btn--prev');
  const nextBtn = root.querySelector('.reviews__btn--next');
  if (prevBtn) prevBtn.addEventListener('click', () => center(Math.max(0, active - 1)));
  if (nextBtn) nextBtn.addEventListener('click', () => center(Math.min(slides.length - 1, active + 1)));

  // Keyboard support when card focused
  root.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') { e.preventDefault(); center(Math.max(0, active - 1)); }
    if (e.key === 'ArrowRight'){ e.preventDefault(); center(Math.min(slides.length - 1, active + 1)); }
  }, true);
})();
</script>

{% schema %}
{
  "name": "Reviews",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "inline_richtext", "id": "title", "label": "Title", "default": "Reviews" },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h2",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "H0" }
      ]
    },

    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },

    { "type": "range", "id": "radius", "label": "Card corner radius (px)", "min": 0, "max": 32, "step": 2, "default": 16 },
    { "type": "range", "id": "gap", "label": "Gap between reviews (px)", "min": 8, "max": 48, "step": 2, "default": 24 },

    { "type": "range", "id": "avatar_size", "label": "Avatar size (px)", "min": 48, "max": 140, "step": 4, "default": 96 },

    { "type": "checkbox", "id": "show_dividers", "label": "Subtle vertical lines on wide screens", "default": false },
    { "type": "color", "id": "divider_color", "label": "Divider color", "default": "#000000" },

    { "type": "header", "content": "Section padding" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 36 }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "limit": 6,
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Avatar" },
        { "type": "textarea", "id": "quote", "label": "Quote / Description", "default": "Tierra de monte logr\u00f3 que nuestra producci\u00f3n se salvara de la peor plaga que pod\u00edamos imaginar en esta temporada." },
        { "type": "text", "id": "name", "label": "Name", "default": "Silverio Pliego D." },
        { "type": "text", "id": "company", "label": "Company", "default": "Huerta Cuauht\u00e9moc" }
      ]
    }
  ],
  "presets": [
    { "name": "Reviews", "blocks": [ { "type": "review" }, { "type": "review" }, { "type": "review" } ] }
  ]
}
