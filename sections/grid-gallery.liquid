<section id="grid-gallery-{{ section.id }}" class="page-width grid-gallery">
  {% if section.settings.kicker != blank %}
    <p class="caption-with-letter-spacing grid-gallery__kicker">{{ section.settings.kicker }}</p>
  {% endif %}

  {% if section.settings.heading != blank %}
    <h1 class="h1 grid-gallery__heading">{{ section.settings.heading }}</h1>
  {% endif %}

  {% if section.settings.subheading != blank %}
    <p class="subtitle grid-gallery__subheading">{{ section.settings.subheading }}</p>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="grid-gallery__grid" role="list">
      {% for block in section.blocks %}
        {% liquid
          assign img = block.settings.image
          assign name = block.settings.name
          assign sci = block.settings.scientific_name
          assign product = block.settings.product
          assign note = block.settings.note
        %}

        <article class="grid-gallery__card" role="listitem" {{ block.shopify_attributes }}>
          <div
            class="grid-gallery__media"
            {% if img %}
              style="background-image:url('{{ img | image_url: width: 1000 }}');"
            {% endif %}
          >
            {% if img == blank %}
              <div class="grid-gallery__placeholder"></div>
            {% endif %}
          </div>

          <div class="grid-gallery__body">
            {% if name != blank %}
              <h3 class="grid-gallery__name">{{ name }}</h3>
            {% endif %}

            {% if sci != blank %}
              <p class="grid-gallery__sci">
                <em>{{ sci }}</em>
              </p>
            {% endif %}

            {% if note != blank %}
              <p class="grid-gallery__note">{{ note }}</p>
            {% endif %}

            {% if product != blank %}
              <div class="grid-gallery__product">
                <span class="grid-gallery__product-label">
                  {{- section.settings.product_label | default: 'Producto recomendado' -}}
                </span>
                <a class="grid-gallery__product-link" href="{{ product.url }}">
                  {{ product.title }}
                </a>
              </div>
            {% endif %}
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <p style="opacity:.7">Add items using “Add block”.</p>
  {% endif %}
</section>

<style>
  #grid-gallery-{{ section.id }}{
    --gg-gap: 18px;
    --gg-radius: 16px;
    --gg-border: rgba(var(--color-foreground), .12);
    --gg-ink: rgba(var(--color-foreground), 1);
    --gg-muted: rgba(var(--color-foreground), .72);
    --gg-soft: rgba(var(--color-foreground), .06);
    --gg-bg: #f7f3ee;
    padding-top: 64px;
    padding-bottom: 64px;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__kicker,
  #grid-gallery-{{ section.id }} .grid-gallery__heading,
  #grid-gallery-{{ section.id }} .grid-gallery__subheading{
    text-align:center;
    margin-left:auto;
    margin-right:auto;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__heading{ margin:.5rem 0 0; }
  #grid-gallery-{{ section.id }} .grid-gallery__subheading{ margin:.75rem 0 2.25rem; opacity:.9; }

  #grid-gallery-{{ section.id }} .grid-gallery__grid{
    display:grid;
    gap: var(--gg-gap);
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  @media (min-width: 750px){
    #grid-gallery-{{ section.id }} .grid-gallery__grid{
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (min-width: 990px){
    #grid-gallery-{{ section.id }} .grid-gallery__grid{
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
  }

  #grid-gallery-{{ section.id }} .grid-gallery__card{
    border: 1px solid var(--gg-border);
    border-radius: var(--gg-radius);
    overflow: hidden;
    background: var(--gg-bg);
    display: grid;
    grid-template-rows: auto 1fr;
    min-height: 100%;
    box-shadow: 0 1px 0 rgba(0,0,0,.02);
    transition: transform .15s ease, box-shadow .15s ease, border-color .15s ease;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__card:hover{
    transform: translateY(-2px);
    box-shadow: 0 12px 28px rgba(0,0,0,.10);
    border-color: rgba(var(--color-foreground), .16);
  }

  #grid-gallery-{{ section.id }} .grid-gallery__media{
    aspect-ratio: 1 / 1;
    background-color: rgba(0,0,0,.03);
    background-size: cover;
    background-position: center;
    position: relative;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__media::after{
    content:"";
    position:absolute;
    inset:0;
    background: linear-gradient(to top, rgba(0,0,0,.08), rgba(0,0,0,0));
    pointer-events:none;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__placeholder{
    position:absolute;
    inset:0;
    background:
      linear-gradient(135deg, rgba(0,0,0,.04), rgba(0,0,0,.02));
  }

  #grid-gallery-{{ section.id }} .grid-gallery__body{
    padding: 14px 14px 16px;
    display: grid;
    gap: 6px;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__name{
    margin: 0;
    font-size: 14px;
    line-height: 1.2;
    letter-spacing: .2px;
    color: var(--gg-ink);
  }

  #grid-gallery-{{ section.id }} .grid-gallery__sci{
    margin: 0;
    font-size: 13px;
    line-height: 1.25;
    color: var(--gg-muted);
  }

  #grid-gallery-{{ section.id }} .grid-gallery__note{
    margin: 0;
    font-size: 13px;
    line-height: 1.35;
    color: rgba(var(--color-foreground), .78);
  }

  #grid-gallery-{{ section.id }} .grid-gallery__product{
    margin-top: 6px;
    padding-top: 10px;
    border-top: 1px solid rgba(var(--color-foreground), .10);
    display: grid;
    gap: 6px;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__product-label{
    font-size: 11px;
    letter-spacing: .08em;
    text-transform: uppercase;
    color: rgba(var(--color-foreground), .58);
  }

  #grid-gallery-{{ section.id }} .grid-gallery__product-link{
    display: inline-flex;
    align-items: center;
    gap: 8px;
    width: fit-content;
    max-width: 100%;
    padding: 10px 12px;
    border-radius: 999px;
    border: 1px solid rgba(var(--color-foreground), .14);
    background: rgba(255,255,255,.55);
    color: var(--gg-ink);
    text-decoration: none;
    font-size: 13px;
    line-height: 1;
    transition: background .15s ease, border-color .15s ease, transform .15s ease;
  }

  #grid-gallery-{{ section.id }} .grid-gallery__product-link:hover{
    background: rgba(255,255,255,.85);
    border-color: rgba(var(--color-foreground), .22);
    transform: translateY(-1px);
  }

  @media (max-width: 749.98px){
    #grid-gallery-{{ section.id }}{
      padding-top: 48px;
      padding-bottom: 48px;
      --gg-gap: 14px;
      --gg-radius: 14px;
    }

    #grid-gallery-{{ section.id }} .grid-gallery__body{
      padding: 12px 12px 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Grid gallery",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker" },
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "text", "id": "product_label", "label": "Product label", "default": "Producto recomendado" }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Gallery item",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "name", "label": "Name" },
        { "type": "text", "id": "scientific_name", "label": "Scientific name" },
        { "type": "product", "id": "product", "label": "Recommended product" },
        { "type": "textarea", "id": "note", "label": "Short note (optional)" }
      ]
    }
  ],
  "presets": [{ "name": "Grid gallery" }]
}
{% endschema %}
