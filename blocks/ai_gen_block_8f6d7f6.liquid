{% doc %}
  @prompt
    a section where i can add cards for a team section, each card should have a image,with 16px rounded corner, an underneath section for title for the name of the person, a text for its role and all the container should have a left 1px stroke of the size of the container, add the ability to add infinite team members but limit always the row to 4 elements.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-team-section-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-team-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-team-heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-team-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-team-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-left: 1px solid {{ block.settings.border_color }};
    padding: {{ block.settings.card_padding }}px;
    transition: transform 0.3s ease;
  }

  .ai-team-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-team-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 16px;
    overflow: hidden;
    border-radius: 16px;
  }

  .ai-team-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 16px;
  }

  .ai-team-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-team-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-team-info-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-team-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.name_color }};
    margin: 0 0 8px 0;
  }

  .ai-team-role-{{ ai_gen_id }} {
    font-size: {{ block.settings.role_size }}px;
    color: {{ block.settings.role_color }};
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-team-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-team-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-team-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-team-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-team-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-team-grid-{{ ai_gen_id }}">
      {% assign member_count = 0 %}
      {% for i in (1..50) %}
        {% liquid
          assign image_key = 'member_' | append: i | append: '_image'
          assign name_key = 'member_' | append: i | append: '_name'
          assign role_key = 'member_' | append: i | append: '_role'

          assign member_image = block.settings[image_key]
          assign member_name = block.settings[name_key]
          assign member_role = block.settings[role_key]
        %}

        {% if member_name != blank or member_role != blank or member_image != blank %}
          <div class="ai-team-card-{{ ai_gen_id }}">
            <div class="ai-team-image-wrapper-{{ ai_gen_id }}">
              {% if member_image %}
                <img
                  src="{{ member_image | image_url: width: 500 }}"
                  alt="{{ member_name | escape }}"
                  class="ai-team-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ member_image.width }}"
                  height="{{ member_image.height }}"
                >
              {% else %}
                <div class="ai-team-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-team-info-{{ ai_gen_id }}">
              {% if member_name != blank %}
                <h3 class="ai-team-name-{{ ai_gen_id }}">{{ member_name }}</h3>
              {% endif %}
              {% if member_role != blank %}
                <p class="ai-team-role-{{ ai_gen_id }}">{{ member_role }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

